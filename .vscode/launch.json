    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Lambda Function",
            "program": "/usr/local/bin/lambda-local",
            "cwd": "${workspaceRoot}",
            "args":[  
                "-l",
                "${workspaceFolder}/src/functions/fileinstagram.js",
                "-h",
                "handler",
                "-e",
                "${workspaceFolder}/src/functions/event.json",
                "IG_GIT_USER='scouts_hispano'",
                "IG_GIT_TOKEN='mytoken'",
                "IG_GIT_REPO='myrepo'",
                "IG_SECRET_KEY='mykey'"
             ]
        }
    ]
}